@model RegisterModel


<div class="container">

    <div class="col-sm-4 login-container">


        <div class="card-body registerForm">
         
            <h4 class="card-title mb-4 mt-1">Register</h4>
            <form method="Post" asp-action="register">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Username">Username</label>
                    <input asp-for="Username" name="Username" class="form-control" placeholder="Choose your username">
                    <span asp-validation-for="Username"></span>

                </div> <!-- form-group// -->
                <div class="form-group">

                    <label asp-for="Email">E-mail</label>
                    <input asp-for="Email" name="Email" class="form-control" placeholder="Please provide your E-mail" type="email">
                    <span asp-validation-for="Email"></span>
                </div><!-- form-group// -->

                <div class="form-group">

                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" name="Password" class="form-control" placeholder="Select password" type="password">
                    <span asp-validation-for="Password"></span>
                </div><!-- form-group// -->
                <div class="form-group">

                    <label asp-for="ConfirmPassword">Confirm your password</label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Select password" type="password">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div><!-- form-group// -->

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block" id="registerButton"> Register  </button>
                </div> <!-- form-group// -->
            </form>
        </div>


    </div>

</div>

